extend layout

block content
    h1 Login
    form(method='post',action='/users/login',enctype='multipart/form-data')
        .form-group
            label Username
            input.form-control(type="text", name="username", placeholder="User Name")
        .form-group
            label Password
            input.form-control(type="password", name="password", placeholder="Enter Password")
        input.btn.btn-default(name="submit", type="submit", value="Login")